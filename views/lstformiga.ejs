<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Site de Apostas de corridas de formigas</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
            integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">    
    </head>
<h2>Lista de Formigas</h2>
<table border="1">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Raça</th>
            <th>Desempenho</th>
            <th>Sala</th>
            <th>Ações</th>
        </tr>
    </thead>
        <%Formiga.forEach(function(formiga){%>
        <tr>
            <td><%=formiga.nome%></td>
            <td><%=formiga.raca%></td>
            <td><%=formiga.desempenho%></td>
            <td><a href="/edtformiga/<%=formiga._id%>">Editar</a></td>
            <td><a href="/delformiga/<%=formiga._id%>">Delete</a></td>
        </tr>
        <% }) %>
</table>

<a href="/addformiga">
    <button>Adicionar Formiga</button>
</a>
<%-include('rodape.ejs')%>